<h1>Listing collections</h1>

<table>
  <tr>
  <% for column in Collection.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for collection in @collections %>
  <tr>
  <% for column in Collection.content_columns %>
    <td><%=h collection.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => collection %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => collection %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => collection }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @collection_pages.current.previous } if @collection_pages.current.previous %>
<%= link_to 'Next page', { :page => @collection_pages.current.next } if @collection_pages.current.next %> 

<br />

<%= link_to 'New collection', :action => 'new' %>
